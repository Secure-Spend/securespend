{
  "version": 2,
  "redirects": [
    {
      "source": "/:path(.*)",
      "has": [{ "type": "host", "value": "__VERCEL_SUBDOMAIN__.vercel.app" }],
      "destination": "https://__SITE_DOMAIN__/:path",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        { "key": "Content-Type", "value": "text/plain; charset=utf-8" }
      ]
    },
    {
      "source": "/BingSiteAuth.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml; charset=utf-8" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/check-balance.js" },
    { "source": "/((?!api|.*\\.xml|.*\\.txt|.*\\.js|.*\\.css|.*\\.png|.*\\.jpg|.*\\.jpeg|.*\\.gif|.*\\.svg|.*\\.ico).*)", "destination": "/index.html" }
  ]
}
